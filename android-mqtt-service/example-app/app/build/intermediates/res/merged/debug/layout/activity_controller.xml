<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinnerParasite"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/XYController"
        android:layout_alignLeft="@+id/XYController" />

    <Switch
        android:id="@+id/switchLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Led"
        android:layout_alignBottom="@+id/picButton"
        android:layout_alignEnd="@+id/spinnerParasite"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="11dp" />

    <ImageButton
        android:id="@+id/picButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/zUp"
        android:layout_marginStart="43dp" />

    <ImageButton
        android:id="@+id/XYController"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_arrow_upward_black_24dp"
        android:layout_below="@+id/switchLed"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <ImageButton
        android:id="@+id/zUp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_arrow_upward_black_24dp"
        android:layout_below="@+id/picButton"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/zDown"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        android:layout_below="@+id/zUp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
