<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.igenius.mqttdemo.Controller">

    <Spinner
        android:id="@+id/spinnerParasite"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/picButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Switch
        android:id="@+id/switchLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Led"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignBottom="@+id/picButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <ImageButton
        android:id="@+id/XYController"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_arrow_upward_black_24dp"
        android:text="Button"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:id="@+id/zUp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_arrow_upward_black_24dp"
        android:layout_above="@+id/zDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/zDown"
        android:layout_alignStart="@+id/zDown" />

    <ImageButton
        android:id="@+id/zDown"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/XYController"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
