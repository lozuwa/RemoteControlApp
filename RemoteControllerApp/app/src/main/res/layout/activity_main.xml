<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerBroker"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/brokerButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Connect"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ToggleButton
            android:id="@+id/connection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/lock_selector"
            android:textOff=""
            android:textOn=""
            android:layout_below="@+id/brokerButton"
            android:layout_centerHorizontal="true" />

        <Switch
            android:id="@+id/switchLed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Led"
            android:layout_marginBottom="26dp"
            android:layout_above="@+id/textView1"
            android:layout_toEndOf="@+id/movefieldbackward" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_below="@+id/connection"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeButton"
            android:layout_alignParentStart="true"
            android:text="Steps sensitivity:" />

        <SeekBar
            android:id="@+id/seekBar0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/homeButton"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar0"
            android:layout_alignParentStart="true"
            android:text="Pick a parasite:" />

        <Spinner
            android:id="@+id/spinnerParasite"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView0"
            android:layout_alignParentStart="true" />

        <!-- Move controller -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ControllerXY"
            android:layout_below="@+id/spinnerParasite"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/movefieldUp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/movefieldforward"
            android:layout_width="170dp"
            android:layout_height="125dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_below="@+id/movefieldUp"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/movefieldbackward"
            android:layout_width="170dp"
            android:layout_height="125dp"
            android:layout_below="@+id/movefieldUp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <ImageButton
            android:id="@+id/movefieldDown"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_below="@+id/movefieldbackward"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ControllerZ"
            android:layout_below="@+id/movefieldDown"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/zUp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_below="@+id/textView3" />

        <ImageButton
            android:id="@+id/picButton"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_below="@+id/zUp"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/zDown"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_below="@+id/picButton"/>

    </RelativeLayout>
</ScrollView>