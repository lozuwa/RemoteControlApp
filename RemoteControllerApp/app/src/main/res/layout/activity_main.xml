<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/root">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <ImageButton
                android:id="@+id/movefieldforward"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/move_field"
                android:layout_below="@+id/zup"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp" />

            <ImageButton
                android:id="@+id/movefieldbackward"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/move_field"
                android:layout_alignTop="@+id/movefieldforward"
                android:layout_toLeftOf="@+id/movefieldforward"
                android:layout_toStartOf="@+id/movefieldforward" />

            <ImageButton
                android:id="@+id/zup"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_arrow_downward_black_24dp"
                android:layout_below="@+id/zdown"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp" />

            <ImageButton
                android:id="@+id/zdown"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_arrow_upward_black_24dp"
                android:layout_alignTop="@+id/yforward"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/xleft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_below="@+id/yforward"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/xright"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:elevation="18dp"
                android:layout_below="@+id/yforward"
                android:layout_toRightOf="@+id/ybackward"
                android:layout_toEndOf="@+id/ybackward" />

            <ImageButton
                android:id="@+id/yforward"
                android:text="YAdelante"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_arrow_upward_black_24dp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/connection"
                android:layout_toRightOf="@+id/xleft"
                android:layout_toEndOf="@+id/xleft" />

            <ImageButton
                android:id="@+id/ybackward"
                android:text="YAtras"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_arrow_downward_black_24dp"
                tools:layout_editor_absoluteY="152dp"
                android:layout_below="@+id/xright"
                android:layout_toRightOf="@+id/xleft"
                android:layout_toEndOf="@+id/xleft" />

            <ImageButton
                android:id="@+id/picButton"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ybackward"
                android:layout_below="@+id/yforward"
                android:layout_toRightOf="@+id/xleft"
                android:layout_toLeftOf="@+id/xright"
                android:layout_toStartOf="@+id/xright" />

            <ToggleButton
                android:id="@+id/connection"
                android:background="@drawable/lock_selector"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textOff=""
                android:textOn=""
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensidad led"
                android:layout_below="@+id/ybackward"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />


            <SeekBar
                android:id="@+id/seekBar0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velocidad"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/seekBar0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/seekBar1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ToggleButton
                android:id="@+id/automaticButton"
                android:background="@drawable/human_selector"
                android:textOff=""
                android:textOn=""
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/seekBar3"
                android:layout_toRightOf="@+id/xleft"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <ImageButton
                android:id="@+id/homeButton"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/seekBar3"
                android:layout_toLeftOf="@+id/zdown"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/xright"
                android:layout_alignEnd="@+id/xright" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
