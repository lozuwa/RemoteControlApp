<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/root">

    <RelativeLayout
        android:id="@+id/form_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:id="@+id/connection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/lock_selector"
            android:textOff=""
            android:textOn=""
            android:layout_alignParentTop="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp" />

        <ImageButton
            android:id="@+id/picButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_below="@+id/connection"
            android:layout_alignRight="@+id/connection"
            android:layout_alignEnd="@+id/connection"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />


        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_alignTop="@+id/picButton"
            android:layout_toLeftOf="@+id/movefieldforward"
            android:layout_toStartOf="@+id/movefieldforward"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

        <ImageButton
            android:id="@+id/movefieldforward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/move_field"
            android:layout_below="@+id/picButton"
            android:layout_alignLeft="@+id/picButton"
            android:layout_alignStart="@+id/picButton" />

        <ImageButton
            android:id="@+id/movefieldbackward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/move_field"
            android:layout_below="@+id/homeButton"
            android:layout_alignLeft="@+id/homeButton"
            android:layout_alignStart="@+id/homeButton" />

        <ImageButton
            android:id="@+id/zup"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_below="@+id/movefieldforward"
            android:layout_alignLeft="@+id/movefieldforward"
            android:layout_alignStart="@+id/movefieldforward" />

        <ImageButton
            android:id="@+id/zdown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_below="@+id/movefieldbackward"
            android:layout_alignLeft="@+id/movefieldbackward"
            android:layout_alignStart="@+id/movefieldbackward" />

    </RelativeLayout>

</RelativeLayout>
